<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/top_theme"
                android:background="@drawable/theme_profile"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <TextView
                    android:fontFamily="@font/roboto_slab_light"
                    android:textSize="30dp"
                    android:textColor="@android:color/white"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="Profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <Button
                android:id="@+id/updateProfile"
                android:fontFamily="@font/roboto_slab_light"
                android:background="@drawable/ic_create_black_24dp"
                android:layout_marginLeft="350dp"
                android:layout_marginTop="170dp"
                android:layout_width="30dp"
                android:layout_height="30dp"></Button>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgKH"
                android:layout_marginTop="70dp"
                android:layout_width="150dp"
                android:layout_centerHorizontal="true"
                android:layout_height="150dp" />

            <LinearLayout
                android:layout_marginTop="70dp"
                android:orientation="vertical"
                android:layout_below="@+id/top_theme"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bogoc"
                    android:orientation="vertical">
                    <TextView
                        android:fontFamily="@font/roboto_slab_light"
                        android:drawableLeft="@drawable/ic_email_settings"
                        android:textSize="25dp"
                        android:text="Email"
                        android:drawablePadding="10dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/profile_email_captain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:fontFamily="@font/roboto_slab_light"
                        android:background="@drawable/bogoc"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/profile_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bogoc"
                    android:orientation="vertical">
                    <TextView
                        android:fontFamily="@font/roboto_slab_light"
                        android:drawablePadding="10dp"
                        android:drawableLeft="@drawable/ic_person_black_24dp"
                        android:textSize="25dp"
                        android:text="Name"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/profile_name_captain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:fontFamily="@font/roboto_slab_light"
                        android:background="@drawable/bogoc"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/profile_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bogoc"
                    android:orientation="vertical">
                    <TextView
                        android:fontFamily="@font/roboto_slab_light"
                        android:drawableLeft="@drawable/ic_call_black_24dp"
                        android:textSize="25dp"
                        android:text="SDT"
                        android:drawablePadding="10dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/profile_sdt_captain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:fontFamily="@font/roboto_slab_light"
                        android:background="@drawable/bogoc"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/profile_sdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bogoc"
                    android:orientation="vertical">
                    <TextView
                        android:fontFamily="@font/roboto_slab_light"
                        android:drawableLeft="@drawable/ic_location_on_black_24dp"
                        android:drawablePadding="10dp"
                        android:textSize="25dp"
                        android:text="Địa chỉ"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/profile_diachi_captain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:fontFamily="@font/roboto_slab_light"
                        android:background="@drawable/bogoc"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/profile_diachi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bogoc"
                    android:orientation="horizontal">

                    <TextView
                        android:fontFamily="@font/roboto_slab_light"
                        android:layout_marginBottom="15dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:textSize="20dp"
                        android:text="Lịch sử đặt Tour"
                        android:layout_marginLeft="20dp"
                        android:id="@+id/profile_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Button
                        android:id="@+id/btnHistory"
                        android:background="@drawable/history"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="140dp"
                        android:layout_width="80dp"
                        android:layout_height="35dp" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>